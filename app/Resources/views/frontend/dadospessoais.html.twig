{% extends 'frontend-base.html.twig' %}

{% block body %}
    <div class="page-header smaller parallax custom text-center" style="background-image:url({{ urlThemeWebsite }}/images/page-header-bg.jpg)" data-0="background-position:50% 50%;" data-top-bottom="background-position:50% 100%">
        <div class="container-fluid">
            <h1>Painel de Controle</h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-md-6">
                                <h2>Visualizar Dados Pessoais</h2>
                            </div>
                            <div class="row">
                                {% include 'frontend/menuadmin.html.twig' %}
                            </div>
                            <div class="mb20"></div><!-- space -->
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-8 col-sm-6">

                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Nome</label>
                                        <input type="text" class="form-control input-sm" maxlength="100" value="{{ usuario.nome }}" readonly="readonly" id="nome" name="nome" placeholder="Nome" />
                                    </div><!-- End .col-md-6 -->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Email</label>
                                            <input type="email" class="form-control input-sm" maxlength="200" value="{{ usuario.email }}" readonly="readonly" id="email" name="email" placeholder="Email" />
                                        </div><!-- End .col-md-6 -->
                                    </div><!-- End .row -->
                                    <div class="col-md-3">
                                        <label>Login</label>
                                        <input type="text" class="form-control input-sm" id="login" value="{{ usuario.username }}" readonly="readonly" maxlength="100" name="login" placeholder="Login" />
                                    </div><!-- End .col-md-6 -->
                                    <div class="col-md-3">
                                        <label>CPF</label>
                                        <input type="text" class="form-control input-sm maskCpf" id="cpf" value="{{ usuario.cpf }}" readonly="readonly" maxlength="14" name="cpf" placeholder="CPF" />
                                    </div><!-- End .col-md-6 -->
                                </div><!-- End .row -->
                                <div class="mb10"></div><!-- margin -->

                            </div><!-- End .col-md-8 -->

                        </div><!-- End .row -->


                    </div><!-- End .col-sm-12 -->
                </div><!-- End .row -->

                <div class="mb40"></div><!-- space -->

            </div><!-- End .col-md-6 -->
            <div class="clearfix mb10 visible-xs visible-sm"></div><!-- margin -->

        </div><!-- End .row -->
    </div><!-- End .container-fluid -->

{% endblock %}


