{% extends folderEstrutura~'backend-base.html.twig' %}

{% block body %}


    <div id="main-container">
        <div id="breadcrumb">
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('principal') }}">Home</a>
                </li>
                <li>Administrar Produto</li>
                <li class="active">Cadastrar</li>
            </ul>
        </div><!--breadcrumb-->

        <div class="padding-md">
            <div class="row">
                <div class="col-md-12">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="overview">
                            <div class="row">

                                <!-- COLUNA COM O FORM -->
                                <div class="col-md-12">

                                    (<span class="asterisco">*</span>) Campos de preenchimento obrigatório <br /> <br />

                                    <form action="#" method="post" name="fotoProdutoForm" id="fotoProdutoForm" class="form-horizontal" role="form" enctype="multipart/form-data">
                                        <input type="hidden" name="actionForm" id="actionForm" value="{{ path('produto_addFotoProduto') }}" />
                                        <input type="hidden" name="idEdit" id="idEdit" value="{{ idProduto }}" />

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right">
                                                <label>Upload de Imagem</label>
                                                <p>Escolha uma imagem de boa qualidade pra o seu imóvel.</p>
                                            </label>
                                            <div class="col-sm-4">
                                                <div class="image-placeholder"><img src="#" class="image-placeholder" id="imgUpload" alt=""/></div>
                                                <input type="file" name="foto" id="foto" />
                                            </div>
                                        </div>

                                        <div id="carregaFotoProduto">

                                        </div>

                                        <div class="clearfix form-actions">
                                            <div class="col-md-offset-4 col-md-6">

                                                <a href="{{ path('produto_index') }}" class="btn btn-info" >
                                                    <i class="fa fa-reply bigger-110"></i>
                                                    Voltar
                                                </a>
                                                &nbsp;
                                                <button name="btnCadastrar" id="btnCadastrar" class="btn btn-success" type="submit">
                                                    <i class="fa fa-check bigger-110"></i>
                                                    Cadastrar
                                                </button>

                                            </div>
                                        </div>
                                    </form>

                                </div><!-- /.col -->
                                <!-- FIM DA COLUNA COM O FORM -->


                            </div><!-- /.row -->
                        </div><!-- /tab1 -->

                    </div><!-- /tab-content -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.padding-md -->
    </div><!-- /main-container -->

{% endblock %}
