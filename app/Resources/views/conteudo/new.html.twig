{% extends folderEstrutura~'backend-base.html.twig' %}

{% block body %}


    <div id="main-container">
        <div id="breadcrumb">
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('principal') }}">Home</a>
                </li>
                <li>Administrar Conteúdo</li>
                <li class="active">Cadastrar</li>
            </ul>
        </div><!--breadcrumb-->

        <div class="padding-md">
            <div class="row">
                <div class="col-md-12">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="overview">
                            <div class="row">

                                <!-- COLUNA COM O FORM -->
                                <div class="col-md-12">

                                    (<span class="asterisco">*</span>) Campos de preenchimento obrigatório <br /> <br />

                                    <form action="#" method="post" name="editForm" id="editForm" class="form-horizontal" role="form">
                                        <input type="hidden" name="actionForm" id="actionForm" value="{{ path('conteudo_new', {'id':idTipoConteudo}) }}" />

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right" for="metaTitle"> MetaTag Title </label>

                                            <div class="col-sm-4">
                                                <input name="metaTitle" type="text" id="metaTitle" value="{{ conteudo.metaTitle }}" class="form-control" maxlength="200" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right" for="metaDescription"> MetaTag Description </label>

                                            <div class="col-sm-8">
                                                <input name="metaDescription" type="text" id="metaDescription" value="{{ conteudo.metaDescription }}" class="form-control" maxlength="200" />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right" for="metaKeyWords"> MetaTag KeyWords </label>

                                            <div class="col-sm-8">
                                                <input name="metaKeyWords" type="text" id="metaKeyWords" value="{{ conteudo.metaKeyWords }}" class="form-control" maxlength="200" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label no-padding-right" for="descricao"> Descrição</label>

                                            <div class="col-sm-8">
                                                <textarea id="editor1" name="descricao" class="form-control">{{ conteudo.descricao }}</textarea>
                                            </div>
                                        </div>

                                        <div class="clearfix form-actions">
                                            <div class="col-md-offset-4 col-md-6">

                                                <a href="{{ path('conteudo_index') }}" class="btn btn-info" >
                                                    <i class="fa fa-reply bigger-110"></i>
                                                    Voltar
                                                </a>
                                                &nbsp;
                                                <button name="btnCadastrar" id="btnCadastrar" class="btn btn-success" type="submit">
                                                    <i class="fa fa-check bigger-110"></i>
                                                    Cadastrar
                                                </button>

                                            </div>
                                        </div>
                                    </form>

                                </div><!-- /.col -->
                                <!-- FIM DA COLUNA COM O FORM -->


                            </div><!-- /.row -->
                        </div><!-- /tab1 -->

                    </div><!-- /tab-content -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.padding-md -->
    </div><!-- /main-container -->

{% endblock %}
