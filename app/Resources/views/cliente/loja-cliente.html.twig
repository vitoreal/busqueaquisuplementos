{% extends folderEstrutura~'backend-base.html.twig' %}

{% block body %}

    <div id="main-container">
        <div id="breadcrumb">
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ path('principal') }}">Home</a>
                </li>
                <li> Administrar Loja do Cliente</li>
            </ul>
        </div><!--breadcrumb-->

        <div class="grey-container alinhaDireita">
            <b>CPF:</b> {{ cliente.cpf }} &nbsp;&nbsp;&nbsp;
            <b>Nome:</b> {{ cliente.nome }} &nbsp;&nbsp;&nbsp;
            <b>E-mail:</b> {{ cliente.email }} &nbsp;&nbsp;&nbsp;
            <b>Status:</b> {{ cliente.status.nome }}
        </div><!-- /grey-container -->

        <div class="padding-md">
            <div class="row">
                <div class="col-md-12">
                    <div class="tab-content">
                        <div class="tab-pane fade in active" id="overview">
                            <input type="hidden" id="urlClienteProdutoLoja" value="{{ path('cliente_listarLojaDatatable', { "idCliente": cliente.id }) }}">
                            <div class="row">

                                <!-- COLUNA COM O FORM -->
                                <div class="col-md-12">

                                    {{ headerDataTable | raw }}

                                    <br />

                                    <a href="#" onclick="goBack();" class="btn btn-info pull-right" >
                                        <i class="fa fa-reply bigger-110"></i>
                                        Voltar
                                    </a>

                                </div><!-- /.col -->
                                <!-- FIM DA COLUNA COM O FORM -->


                            </div><!-- /.row -->




                        </div><!-- /tab1 -->

                    </div><!-- /tab-content -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.padding-md -->
    </div><!-- /main-container -->
{% endblock %}
